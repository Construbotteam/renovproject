<launch>
  <!-- Arguments -->
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, orbslam2]"/>
  <arg name="open_rviz" default="true"/>
  <arg name="configuration_basename" default="cartographer_params.lua"/>

  <!-- SLAM: Gmapping -->
  <include file="$(find paintingrobot_slam)/launch/paintingrobot_$(arg slam_methods).launch">
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find paintingrobot_slam)/rviz/paintingrobot_$(arg slam_methods).rviz"/>
  </group>
</launch>
