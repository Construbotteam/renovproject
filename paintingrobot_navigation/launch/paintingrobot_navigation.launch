<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find paintingrobot_navigation)/maps/paintingrobot_map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find paintingrobot_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find paintingrobot_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true" respawn="false"
          args="-d $(find paintingrobot_navigation)/rviz/paintingrobot_navigation.rviz" output="screen">
  </node>
  </group>
</launch>
